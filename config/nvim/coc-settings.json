{
    "suggest.autoTrigger": "always",
    "suggest.noselect": false,
    "suggest.snippetIndicator": "►",
    "suggest.echodocSupport": true,
    "suggest.maxCompleteItemCount": 20,
    "coc.preferences.formatOnSaveFiletypes": ["javascript", "typescript", "typescriptreact", "json", "javascriptreact", "typescript.tsx"],
    "eslint.filetypes": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "typescript.tsx"
    ],
    "diagnostic.errorSign": "●",
    "diagnostic.warningSign": ".",
    "diagnostic.infoSign": "~",
    "languageserver": {
      "ccls": {
        "command": "ccls",
        "filetypes": ["c", "cpp"],
        "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
        "initializationOptions": {
          "cache": {
            "directory": "/tmp/ccls"
          }
        }
      }
    },
    "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/snippets"],
    "python.pythonPath": "python3",
    "python.jediPath": "/usr/local/lib/python3.7/site-packages/jedi"
}
