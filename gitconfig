[user]
	name = Johan Planchon
	email = dev@planchon.dev

[core]
  excludesfile = $HOME/.gitignore

[pull]
  rebase = true

[alias]
  files = !git diff --name-only $(git merge-base HEAD \"${REVIEW_BASE:-development}\")
  stat = !git diff --stat $(git merge-base HEAD \"${REVIEW_BASE:-development}\")

[diff]
  colorMoved = default
  tool = difftastic
	external = difft

[http]
  postBuffer = 524288000

[merge]
  tool = vscode
  conflictstyle = diff3

[pager]
  difftool = true

[difftool]
  prompt = false

[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"

[mergetool "vscode"]
  cmd = code --wait --reuse-window $MERGED

[delta]
  paging = always
  navigate = true
  light = false
  line-numbers = true
  side-by-side = true
  # plus-style = syntax "#012800"
  # minus-style = normal "#340001"
  syntax-theme = Monokai Extended
  map-styles = bold purple => syntax magenta, bold cyan => syntax blue
